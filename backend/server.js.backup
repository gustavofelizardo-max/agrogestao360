app.post('/api/auth/login', async (req, res) => {
  try {
    const { email, password, userType } = req.body;

    console.log('ğŸ” Tentativa de login:', { email, userType });

    if (!email || !password || !userType) {
      return res.status(400).json({
        success: false,
        message: 'Email, senha e tipo de usuÃ¡rio sÃ£o obrigatÃ³rios'
      });
    }

    const userQuery = 'SELECT * FROM users WHERE email = $1 AND user_type = $2 AND active = true';
    const userResult = await pool.query(userQuery, [email, userType]);

    if (userResult.rows.length === 0) {
      console.log('âŒ UsuÃ¡rio nÃ£o encontrado');
      return res.status(401).json({
        success: false,
        message: 'Credenciais invÃ¡lidas'
      });
    }

    const user = userResult.rows[0];
    const isPasswordValid = await bcrypt.compare(password, user.password);

    if (!isPasswordValid) {
      console.log('âŒ Senha invÃ¡lida');
      return res.status(401).json({
        success: false,
        message: 'Credenciais invÃ¡lidas'
      });
    }

    const token = jwt.sign(
      { 
        userId: user.id, 
        email: user.email, 
        userType: user.user_type 
      },
      process.env.JWT_SECRET || 'agrotech-jwt-secret-2024',
      { expiresIn: '24h' }
    );

    console.log('âœ… Login realizado com sucesso');

    res.json({
      success: true,
      message: 'Login realizado com sucesso',
      token,
      user: {
        id: user.id,
        email: user.email,
        name: user.name,
        userType: user.user_type,
        profileImage: user.profile_image
      }
    });

  } catch (error) {
    console.error('ğŸ’¥ Erro no login:', error);
    res.status(500).json({
      success: false,
      message: 'Erro interno do servidor'
    });
  }
});

